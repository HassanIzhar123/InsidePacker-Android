<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragments.GeneralSettingsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5BEBE7F9">

            <RelativeLayout
                android:id="@+id/user_guidelines_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackgroundBorderless">

                <RelativeLayout
                    android:id="@+id/user_guidelines_inner_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_toStartOf="@+id/enable_on_launch_switch">

                        <TextView
                            android:id="@+id/user_guidelines_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="@string/enable_on_launch"
                            android:textColor="#0E0139"
                            android:textSize="16sp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@+id/user_guidelines_text"
                            android:background="?selectableItemBackgroundBorderless"
                            android:contentDescription="@string/info_icon"
                            android:src="@drawable/info_icon"
                            android:textColor="#0E0139" />

                    </RelativeLayout>

                    <!--                    <androidx.appcompat.widget.SwitchCompat-->
                    <!--                        android:id="@+id/guidelines_switch"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_alignParentEnd="true"-->
                    <!--                        android:layout_centerVertical="true"-->
                    <!--                        android:layout_marginEnd="20dp" />-->

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/enable_on_launch_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:checked="true"
                        android:theme="@style/SCBSwitch"
                        android:thumb="@drawable/thumb_selector"
                        app:track="@drawable/track_selector" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_below="@+id/user_guidelines_inner_layout"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#CCC4E8" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/automatic_updates_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_guidelines_layout"
                android:background="?selectableItemBackgroundBorderless">

                <RelativeLayout
                    android:id="@+id/automatic_updates_inner_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_toStartOf="@+id/automatic_updates_switch">

                        <TextView
                            android:id="@+id/automatic_updates_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="@string/automatic_updates"
                            android:textColor="#0E0139"
                            android:textSize="16sp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@+id/automatic_updates_text"
                            android:background="?selectableItemBackgroundBorderless"
                            android:contentDescription="@string/info_icon"
                            android:src="@drawable/info_icon" />

                    </RelativeLayout>

                    <!--                    <androidx.appcompat.widget.SwitchCompat-->
                    <!--                        android:id="@+id/automatic_updates_switch"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_alignParentEnd="true"-->
                    <!--                        android:layout_centerVertical="true"-->
                    <!--                        android:layout_marginEnd="20dp" />-->
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/automatic_updates_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:checked="true"
                        android:theme="@style/SCBSwitch"
                        android:thumb="@drawable/thumb_selector"
                        app:track="@drawable/track_selector" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_below="@+id/automatic_updates_inner_layout"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#CCC4E8" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tunnel_selection_to_support_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/automatic_updates_layout">

                <RelativeLayout
                    android:id="@+id/tunnel_selection_inner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tunnel_selection_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/tunnel_selection"
                        android:textColor="#0E0139"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tunnel_selection_steps_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tunnel_selection_text"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/tunnel_selection_details"
                        android:textColor="#0E0139"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_below="@+id/tunnel_selection_inner_layout"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#CCC4E8" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tunnel_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tunnel_selection_to_support_layout"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/empty_tunnels_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tunnel_selection_to_support_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="@string/no_tunnels_available"
                android:textColor="#0E0139"
                android:textSize="18sp"
                android:visibility="visible" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>