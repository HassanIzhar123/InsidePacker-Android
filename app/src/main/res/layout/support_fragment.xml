<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5BEBE7F9"
    tools:context=".activities.SupportActivity">

    <RelativeLayout
        android:id="@+id/upper_layout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/support_upper_layer_background">

        <TextView
            android:id="@+id/support_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/support"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/support_map"
            android:src="@drawable/map" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/upper_layout"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/user_guidelines_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toStartOf="@+id/guidelines_go_to_icon">

                    <TextView
                        android:id="@+id/user_guidelines_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/user_guidelines"
                        android:textColor="#0E0139"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/user_guidelines_steps_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_guidelines_text"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/user_guidelines_steps"
                        android:textColor="#0E0139"
                        android:textSize="14sp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/guidelines_go_to_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="@string/support_map"
                    android:src="@drawable/right_control_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/live_chat_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_guidelines_layout"
                android:background="?attr/selectableItemBackground"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toStartOf="@+id/_live_chat_go_to_icon">


                    <TextView
                        android:id="@+id/live_chat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/live_chat"
                        android:textColor="#0E0139"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/live_chat_steps_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/live_chat_text"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/read_step_by_step"
                        android:textColor="#0E0139"
                        android:textSize="14sp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/_live_chat_go_to_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="@string/support_map"
                    android:src="@drawable/right_control_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/send_logs_to_support_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/live_chat_layout"
                android:background="?attr/selectableItemBackground"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toStartOf="@+id/send_logs_go_to_icon">


                    <TextView
                        android:id="@+id/send_logs_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/send_logs_to_support"
                        android:textColor="#0E0139"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/send_logs_steps_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/send_logs_text"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/read_step_by_step"
                        android:textColor="#0E0139"
                        android:textSize="14sp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/send_logs_go_to_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="@string/support_map"
                    android:src="@drawable/right_control_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/send_crash_reports_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_logs_to_support_layout"
                android:background="?attr/selectableItemBackground"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toStartOf="@+id/send_crash_switch">


                    <TextView
                        android:id="@+id/send_crash_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/send_crash_reports"
                        android:textColor="#0E0139"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/send_crash_steps_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/send_crash_text"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/read_step_by_step"
                        android:textColor="#0E0139"
                        android:textSize="14sp" />

                </RelativeLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/send_crash_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:checked="true"
                    android:theme="@style/SCBSwitch"
                    android:thumb="@drawable/thumb_selector"
                    app:track="@drawable/track_selector" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/send_crash_reports_layout"
                android:background="#5BEBE7F9">

                <RelativeLayout
                    android:id="@+id/have_a_question_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/have_a_question_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/have_a_question_call_us"
                        android:textColor="#6B55F0"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/phone_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/have_a_question_text"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/phone_number"
                        android:textColor="#0D0038"
                        android:textSize="16sp" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>